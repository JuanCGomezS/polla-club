---
import '../styles/global.css';
import Header from '../components/react/Header';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  showHeader?: boolean;
}

const { title = 'PollaClub', showHeader = true } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="es" data-base={baseUrl}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sistema de pron√≥sticos deportivos entre amigos" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    {showHeader && <Header client:load />}
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', async () => {
          try {
            const base = document.documentElement.dataset.base || '/';
            const normalizedBase = base.endsWith('/') ? base : `${base}/`;
            const swPath = `${normalizedBase}firebase-messaging-sw.js`;

            console.log('üìã Intentando registrar Service Worker en:', swPath);

            const registration = await navigator.serviceWorker.register(swPath, {
              scope: normalizedBase
            });

            console.log('‚úÖ Service Worker registrado:', registration.scope);
          } catch (error) {
            console.error('‚ùå Error registrando Service Worker:', error);
          }
        });
      } else {
        console.log('Service Worker no soportado en este navegador');
      }
    </script>
  </body>
</html>
